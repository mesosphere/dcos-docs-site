- var paths = path.split('/')
- var [ sphere, product ] = paths
- var isChinese = paths[2] == 'cn'

doctype html
html(lang='en')
  head
    include partials/head.pug
  body
    div(class='layout')
      if isChinese
        include partials/header/dcos-cn-header.pug
      else if product === "konvoy"
        include partials/header/konvoy-header.pug
      else if product === "dispatch"
        include partials/header/dispatch-header.pug
      else if product === "kommander"
        include partials/header/kommander-header.pug
      else if product === "kubeflow"
        include partials/header/kubeflow-header.pug
      else
        include partials/header/dcos-en-header.pug
      if isChinese
        include partials/sidebar/cn-sidebar.pug
      else
        include partials/sidebar/en-sidebar.pug
      div(role='main', class='layout__content')
        include partials/content.pug
    include partials/scripts.pug
