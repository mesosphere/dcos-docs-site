- path = hierarchy.xPath(path)

doctype html
html(lang='en')
  head
    include partials/head.pug
  body
    div(class='layout')
      div(class='layout__sidebar layout__drawer')
        include partials/sidebar.pug
      div(role='main', class='layout__content')
        include partials/header.pug
        if pdfToc
          include partials/print-toc.pug
        else
          include partials/content.pug
    include partials/scripts.pug
