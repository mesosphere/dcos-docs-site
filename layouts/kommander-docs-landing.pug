- var paths = path.split('/')
- var semanticVersion = /^[0-9]\.[0-9].*$/
- var currentProduct = paths[1]
- var ksphereDocs = hierarchy.children.filter(child => child.id === 'ksphere')[0]
- var kommDocs = ksphereDocs.children.filter(child => child.id == 'kommander')[0]
- var latestKommDocs = kommDocs.children.filter(child => child.id == 'latest')[0]

- var headerItemsUnsorted = hierarchy.find('menus').filter(page => page.menus.indexOf('landing-header') != -1)
- var headerSphereItems = headerItemsUnsorted.filter(page => page.id != 'ksphere')

- var productPages = hierarchy.find('menus').filter(page => page.menus.indexOf('kommander-header') != -1)
- var pages = productPages.sort((a, b) => a.menuWeight - b.menuWeight)

- var sectionTitle = 'Kommander Documentation'


mixin renderGridToc()
  div(class='grid-toc')
    each val, index in latestKommDocs.children
      if val.menuWeight != -1
        div(class='grid-toc__item')
          h2(class='grid-toc__title')
            a(href=val.path)!= val.title
          if val.excerpt
            - var displayExcerpt = (val.excerpt.length > 100) ? val.excerpt.substring(0, 100) + 'â€¦' : val.excerpt
            p(class='grid-toc__desc')!= displayExcerpt
          if val.children
            ul(class='grid-toc__list')
              for item in val.children.slice(0, 5)
                li(class='grid-toc__list-item')
                  a(href=item.path, class='grid-toc__link')!= item.title
              if val.children.length > 5
                li(class='grid-toc__list-item')
                  a(href=val.path, class='grid-toc__link grid-toc__link--all') View All
                    img(class='grid-toc__link--all__arrow', src='/assets/right-arrow.svg')

