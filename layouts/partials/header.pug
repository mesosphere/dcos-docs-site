header(class='header')
  a(class='header__drawer')
    i(class='header__icon', data-feather='menu')
  div(class='header__main')
    a(href='/', class='header__logo')
      img(class='header__logo-icon', src='/assets/header-logo-color-dark-mark.png', alt='Mesosphere Logo' height='24')
      img(class='header__logo-text', src='/assets/header-logo-color-dark-type.png', alt='Mesosphere Logo' height='15')
    nav(class='header__menu')
      ul(class='header__menu-list')
        each val, index in hierarchy.children
          if(val.menuWeight !== -1)
            - var itemClass = {}
            - itemClass['header__menu-item'] = true
            - itemClass['header__menu-item--active'] = ('/' + path).includes(val.path)
            li(class=itemClass)
              a(href=val.path)!= val.title
  section(class='header__search', role='search')
      form(class='header__search-form', action='/search', method='GET')
        label(class='header__search-label', for='header-search-input')
          i(class='header__icon', data-feather='search')
        input(class='header__search-input', id='header-search-input', tabindex='1', type='text', name='q', placeholder='Search')