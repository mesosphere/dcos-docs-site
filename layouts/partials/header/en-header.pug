- var semanticVersion = /^[0-9]+\.[0-9]+/
- var menuPages = hierarchy.find('menus')
- var headerPages = menuPages.filter(page => page.menus.indexOf('header') != -1)
- var pages = headerPages.sort((a, b) => a.menuWeight - b.menuWeight)

- function isItemActive(itemPath)
  if itemPath == '/'
    if path == '/'
      - return true
    - return semanticVersion.test(paths[0])
  if itemPath == '/services'
    if `/${path}`.startsWith(itemPath)
      - return !`/${path}`.startsWith(`${itemPath}/kubernetes`)
    - return false
  - return `/${path}`.startsWith('/services/kubernetes')

- var sectionTitle = 'DC/OS Docs'
if paths[0] === 'services'
  if paths[1] === 'kubernetes'
    - sectionTitle = 'Kubernetes Docs'
  else
    - sectionTitle = 'Service Docs'


include header.pug
